{
  "name": "vue3-admin",
  "version": "1.0.1",
  "author": {
    "name": "zbf",
    "url": "https://imbf.cc"
  },
  "keywords": [
    "vue",
    "vue3",
    "vueComponent",
    "admin",
    "jsx",
    "tsx"
  ],
  "license": "MIT",
  "homepage": "https://imzbf.github.io/vue3-admin",
  "scripts": {
    "dev": "vite serve",
    "build": "vite build",
    "build:preview": "vite build --mode preview",
    "lint": "eslint --fix --ext .ts,.tsx,.json src"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.1",
    "ant-design-vue": "^2.2.2",
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "echarts": "^5.0.2",
    "md-editor-v3": "^1.2.0",
    "nprogress": "^0.2.0",
    "screenfull": "^5.1.0",
    "vue": "^3.1.5",
    "vue-router": "^4.0.10",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@vitejs/plugin-vue": "^1.3.0",
    "@vitejs/plugin-vue-jsx": "^1.1.7",
    "@vue/babel-plugin-jsx": "^1.0.3",
    "@vue/compiler-sfc": "^3.1.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.16.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-vue": "^7.3.0",
    "husky": "^4.3.8",
    "less": "4.1.1",
    "lint-staged": "^10.5.3",
    "mockjs": "^1.1.0",
    "prettier": "^2.2.1",
    "typescript": "^4.3.5",
    "vite": "^2.4.4",
    "vite-plugin-antd-theme": "^1.1.3",
    "vite-plugin-mock": "^2.9.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true,
    "printWidth": 90,
    "proseWrap": "never",
    "endOfLine": "auto"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "eslint --fix"
    ],
    "*.{html,ts,tsx,md,json}": [
      "prettier"
    ]
  }
}
