{
  "name": "vue3-admin",
  "version": "0.0.0",
  "author": {
    "name": "zhoubangfu",
    "url": "https://zhoubangfu.com"
  },
  "keywords": [
    "vue",
    "vue3",
    "vueComponent",
    "admin",
    "jsx",
    "tsx"
  ],
  "license": "MIT",
  "homepage": "https://zhoubangfu.github.io/vue3-admin",
  "scripts": {
    "dev": "vite serve",
    "build": "vite build",
    "build:preview": "vite build --mode preview",
    "lint": "eslint --fix --ext .ts,.tsx,.md,.json src"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.1",
    "ant-design-vue": "^2.0.1",
    "axios": "^0.21.1",
    "classnames": "^2.3.1",
    "echarts": "^5.0.2",
    "nprogress": "^0.2.0",
    "screenfull": "^5.1.0",
    "vue": "^3.0.4",
    "vue-router": "^4.0.3",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vitejs/plugin-vue-jsx": "^1.1.0",
    "@vue/babel-plugin-jsx": "^1.0.3",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.16.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-vue": "^7.3.0",
    "husky": "^4.3.8",
    "less": "3.12.2",
    "lint-staged": "^10.5.3",
    "mockjs": "^1.1.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.5",
    "typescript": "^4.1.3",
    "vite": "^2.0.1",
    "vite-plugin-antd-theme": "^1.0.2",
    "vite-plugin-mock": "^2.4.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true,
    "printWidth": 90,
    "proseWrap": "never",
    "endOfLine": "auto"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,ts,tsx,json}": [
      "eslint --fix"
    ],
    "*.{html,ts,tsx,md,json}": [
      "prettier"
    ]
  }
}
